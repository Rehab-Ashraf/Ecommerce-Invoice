@model INVOICE.Models.Product
@{

    ViewBag.Title = "AddProduct";
}

<div class="" style="margin:5%;padding:5%;background-color:aliceblue;justify-content:center">
    <h2>Add Product</h2>
    @using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this);", data_restUrl = Url.Action("AddProduct", "Product") }))
    {
        @Html.ValidationSummary(false)
        @Html.HiddenFor(p => p.ID)
        @Html.HiddenFor(p => p.ImagPath)
        <div class="form-group">
            @Html.LabelFor(p => p.Name)
            <br />
            @Html.TextBoxFor(p => p.Name)
            @Html.ValidationMessageFor(p => p.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Cost)
            <br />
            @Html.EditorFor(p => p.Cost)
            @Html.ValidationMessageFor(p => p.Cost, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Description)
            <br />
            @Html.TextAreaFor(p => p.Description)
            @Html.ValidationMessageFor(p => p.Description, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.ImagPath)
            @Html.ValidationMessageFor(p => p.ImageUpload)
            <br />
            <img src="@Url.Content(Model.ImagPath)" style="width:10%;height:10%" alt="image" id="imagePreview" />
            <br /><br />
            <input type="file" name="ImageUpload" value="" onchange="ShowImagePreview(this,document.getElementById('imagePreview'))" />

        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
                @Html.ActionLink("Back", "Index", "Product", new { @class = "btn btn-info" })
            </div>
        </div>
    }
</div>

@section scripts{

    @Scripts.Render("~/bundles/jqueryval")
}


