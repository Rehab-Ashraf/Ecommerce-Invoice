@model INVOICE.Models.Product
@{
    ViewBag.Title = "Edit";
}

<div class="" style="margin:5%;padding:5%;background-color:aliceblue;justify-content:center">
    <h2>Edit Product</h2>
    @using (Html.BeginForm("Edit", "Product", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(p => p.Name)
            <br />
            @Html.TextBoxFor(p => p.Name)
            @Html.ValidationMessageFor(p => p.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Cost)
            <br />
            @Html.EditorFor(p => p.Cost)
            @Html.ValidationMessageFor(p => p.Cost)
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Description)
            <br />
            @Html.TextAreaFor(p => p.Description)
            @Html.ValidationMessageFor(p => p.Description)
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.ImagPath)
           
            <br />
            <img src = "@Url.Content(Model.ImagPath)" style="width:10%;height:10%" alt="image" id="imagePreview" />
            <br /><br />

        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
                @Html.ActionLink("Back", "Index", "Product", new { @class = "btn btn-info" })
            </div>
        </div>
    }
</div>
@section scripts{

    @Scripts.Render("~/bundles/jqueryval")
}
